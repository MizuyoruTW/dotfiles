#! /bin/sh

pgrep -x sxhkd > /dev/null || sxhkd &

bspc monitor -d I II III IV V VI VII VIII IX X

bspc config border_width         2
bspc config window_gap          12

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a firefox:Toolkit sticky=on state=floating
bspc rule -a firefox:Devtools state=floating

# show cursor when startup
xsetroot -cursor_name left_ptr
# polybar
/home/mizuyoru/.config/polybar/launch.sh &
# xfce desktop
xfdesktop -D &
# lock screen after suspend
xss-lock -- /home/mizuyoru/Project/bash/lock.sh &
